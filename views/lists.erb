<ul id='lists'>
  <% sort_lists do |list, index| %>
    <li class=<%= completed_class(list) %>>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{list[:todos].size-count_completed(list)}/#{list[:todos].size}"%></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class='add' href="/lists/new"> New List</a>
<% end %>
